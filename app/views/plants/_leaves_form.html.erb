<%= form_tag('/plants_search', remote: true, method: 'get') do %>
  <%= label_tag(:leaves, "Search by leaves type") %>
  <br>
  <%= select_tag :leaves, options_from_collection_for_select(@plants.uniq{ |o| o.leaves }, :leaves, :leaves) %>
  <br>
  <%= button_tag "Leaves Search", :id => "leaves-btn" %>
<% end %>
