<h1>Identify Plants</h1>
<%= form_tag('/plants_search', remote: true, method: 'get') do %>
  <div id="leaves-search">
    <%= label_tag(:leaves, "Search by leaves type") %>
    <br>
    <%= select_tag :leaves, options_from_collection_for_select(@plants.uniq{ |o| o.leaves }, :leaves, :leaves) %>
    <br>
    <%= submit_tag "Leaves Search", :id => "leaves-btn" %>
  </div>

  <br>

  <div id="cones-search">
    <%= label_tag(:cones, "Search by cones type") %>
    <br>
    <%= select_tag :cones, options_from_collection_for_select(@plants.uniq{ |o| o.cones }, :cones, :cones) %>
    <br>
    <%= submit_tag"Cones Search", :id => "cones-btn" %>
  </div>

  <br>

  <div id="bark-search">
    <%= label_tag(:bark, "Search by bark type") %>
    <br>
    <%= select_tag :bark, options_from_collection_for_select(@plants.uniq{ |o| o.bark }, :bark, :bark) %>
    <br>
    <%= submit_tag "Bark Search", :id => "bark-btn" %>
  </div>

  <br>

<% end %>

<div id="branches-search">
  <%= form_tag('/plants_search', method: 'get') do %>
  <%= label_tag(:branches, "Search by branches type") %>
  <br>
  <%= select_tag :branches, options_from_collection_for_select(@plants.uniq{ |o| o.branches }, :branches, :branches) %>
  <br>
  <%= submit_tag("Branches Search") %>
  <% end %>
</div>



<br>


<h1>Plants</h1>
<div class="plant-plants">
  <% @plants.each do |plant| %>
  <div class="plant">
    <a class="plant-item" href="<%= plant_path(plant) %>">
      <div class="plant-caption">
        <em><%= plant.name %></em> ~ <%= plant.scientific_name %></div>
    </a>
  </div>
  <% end %>
</div>

<br>

<%= form_tag('/name_search', method: 'get') do %>
  <%= label_tag(:name, "Search by Name type") %>
  <br>
  <%= text_field_tag(:name) %>
  <br>
  <%= submit_tag("Name Search") %>
<% end %>
